{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.c",
                "${fileDirname}/menu.c",
                "${fileDirname}/service.c",
                "${fileDirname}/../card/card_service.c",
                "-o",
                "${fileDirname}/main",
                "-I",
                "${fileDirname}/../include/",
                "-I",
                "${fileDirname}/",
                "-I",
                "${fileDirname}/../card/"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build main.c by default."
        }
    ],
    "version": "2.0.0"
}